@page
@model IndexModel
@{
    ViewData["Title"] = "ShriGo";

}

<link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
<link href="cdn.jsdelivr.net" rel="stylesheet">
<div>
    <!-----------------Row1-Top --------------------------------->

    <div class="container-fluid">
        <div class="row" style="padding-left:6px; padding-right:6px">
            <img src="~/img/ShriGo_Landing_pg2.png" />
        </div>

        <div class="row" style="text-align:center">
            <h1 class="display-5">Welcome to ShriGo</h1>
            <h3 class="display-8">Make your Journey</h3>
        </div>
    </div>

    <div class="container-fluid">
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </div>
    <div class="container-fluid">
        <h3>List of Rides available </h3>
        <div id="data-container">
            <!-- Dynamic content will be inserted here -->
        </div>

    </div>
    <div class="container-fluid">
        <br />
   
          @foreach (Model.RideModel rideModel in Model.listRideModel)
        {
            <div class="list-group">
             <a href="#" class="list-group-item list-group-item-action">
               
                        <div class="row"> 
                            <h5 class="col-4"> @rideModel.RideSource</h5>
                            <h5 class="col-4">@rideModel.RideDate</h5>
                            <h5 class="col-4"> @rideModel.RideTime</h5>
                        </div>             
                       <div class="row">
                        <h6 class="col-4"> via:@rideModel.RideVia</h6>
                        <h5 class="col-4"></h5>
                        <h5 class="col-4"></h5>
                    </div>
                    <div class="row">
                        <h5 class="col-4"> @rideModel.RideDesti</h5>
                        <h5 class="col-4"> seats</h5>
                        <h5 class="col-4"> Contact</h5>
                    </div>
            </a>
           </div>
        }
    </div>
</div>
